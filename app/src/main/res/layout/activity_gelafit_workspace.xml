<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <!-- Grid de apps selecionados (visível quando is_active está ativo) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/appsGridRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:visibility="visible" />

    <!-- Container para o app escolhido (quando modo_kiosk está ativo) -->
    <!-- O app escolhido será aberto e exibido sobre esta Activity -->

</RelativeLayout>
